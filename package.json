{
  "name": "autosuggest-highlight",
  "version": "2.1.1",
  "description": "Utilities for highlighting text in autosuggest and autocomplete components",
  "repository": {
    "type": "git",
    "url": "https://github.com/moroshko/autosuggest-highlight.git"
  },
  "author": "Misha Moroshko <michael.moroshko@gmail.com>",
  "scripts": {
    "lint": "eslint src",
    "test": "nyc mocha \"src/**/*.test.js\"",
    "dist": "rm -rf dist && mkdir dist && babel src -d dist --ignore *.test.js",
    "prebuild": "npm run lint && npm test",
    "build": "npm run dist",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run dist"
  },
  "dependencies": {
    "lodash.repeat": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-register": "^6.14.0",
    "bithound": "^1.7.0",
    "chai": "^3.5.0",
    "eslint": "^3.6.1",
    "eslint-plugin-mocha": "^4.5.1",
    "mocha": "^3.1.0",
    "nyc": "^8.3.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "autosuggest",
    "autocomplete",
    "auto suggest",
    "auto complete",
    "highlight autosuggest",
    "highlight autocomplete",
    "highlight auto suggest",
    "highlight auto complete",
    "autosuggest highlight",
    "autocomplete highlight",
    "auto suggest highlight",
    "auto complete highlight"
  ],
  "nyc": {
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "check-coverage": true
  },
  "license": "MIT"
}
